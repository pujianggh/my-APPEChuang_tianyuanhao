<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_login_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normalplus"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            style="@style/common_text_standard_style"
            android:layout_marginTop="50dp"
            android:text="请输入手机号完成注册或登录"
            android:textSize="@dimen/textsize_little" />

        <EditText
            android:id="@+id/edt_phone_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_min"
            android:layout_marginLeft="@dimen/button_height"
            android:layout_marginRight="@dimen/button_height"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_edit_login_bg"
            android:hint="手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/pic_text_orange"
            android:textColorHint="@color/pic_gray"
            android:textSize="@dimen/textsize_little" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_min"
            android:layout_marginLeft="@dimen/button_height"
            android:layout_marginRight="@dimen/button_height"
            android:layout_marginTop="40dp" >

            <EditText
                android:id="@+id/edt_message_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_min"
                android:background="@drawable/ic_edit_login_bg"
                android:hint="短信验证码"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/pic_text_orange"
                android:textColorHint="@color/pic_gray"
                android:textSize="@dimen/textsize_little" />

            <Button
                android:id="@+id/btn_get_phonecode"
                android:layout_width="100dp"
                android:layout_height="@dimen/edittext_min"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_select_orangegray"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/pic_text_orange_gray"
                android:textSize="@dimen/textsize_little" />
        </RelativeLayout>
        <Button
            android:id="@+id/btn_agree_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@null"
            android:gravity="center"
            android:drawablePadding="@dimen/spacing_min"
            android:text="我同意使用条款"
            android:textColor="@color/pic_text_orange"
            android:textSize="@dimen/textsize_little" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_min"
            android:layout_marginLeft="@dimen/button_height"
            android:layout_marginRight="@dimen/button_height"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_common"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/pic_text_orange_gray"
            android:textSize="@dimen/textsize_little" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/spacing_normalplus"
        android:contentDescription="@null"
        android:src="@drawable/ic_logo_tianyuan" />

</RelativeLayout>