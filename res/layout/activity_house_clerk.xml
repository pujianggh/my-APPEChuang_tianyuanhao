<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical" >
    
    <include layout="@layout/base_title"/>
    <TextView 
        android:background="#6666"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="你的问题是什么"
        android:textSize="@dimen/textsize_content"
        android:paddingTop="@dimen/spacing_normal"
        android:paddingBottom="@dimen/spacing_normal"
        android:paddingLeft="@dimen/spacing_normal"
        />
    <TextView 
        android:id="@+id/tv_question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.物业管理咨询"
        android:textSize="@dimen/textsize_content"
        android:textColor="#00f"
        android:paddingTop="@dimen/spacing_normal"
        android:paddingBottom="@dimen/spacing_normal"
        android:paddingLeft="@dimen/spacing_normal"
        />
    <View
     android:layout_width="match_parent"
     android:layout_height="0.5dp"
     android:layout_marginLeft="4dp"
     android:layout_marginRight="4dp"
     android:background="@color/text_lightgray"
     android:visibility="visible" />
    <TextView
        android:id="@+id/tv_question2" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2.租金代收咨询"
        android:textSize="@dimen/textsize_content"
        android:textColor="#00f"
        android:paddingTop="@dimen/spacing_normal"
        android:paddingBottom="@dimen/spacing_normal"
        android:paddingLeft="@dimen/spacing_normal"
        />
    <View
     android:layout_width="match_parent"
     android:layout_height="0.5dp"
     android:layout_marginLeft="4dp"
     android:layout_marginRight="4dp"
     android:background="@color/text_lightgray"
     android:visibility="visible" />
    <TextView
        android:id="@+id/tv_question3" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3.税务信息咨询"
        android:textSize="@dimen/textsize_content"
        android:textColor="#00f"
        android:paddingTop="@dimen/spacing_normal"
        android:paddingBottom="@dimen/spacing_normal"
        android:paddingLeft="@dimen/spacing_normal"
        />
    <View
     android:layout_width="match_parent"
     android:layout_height="0.5dp"
     android:layout_marginLeft="4dp"
     android:layout_marginRight="4dp"
     android:background="@color/text_lightgray"
     android:visibility="visible" />
    <TextView
        android:id="@+id/tv_question4" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4.法务信息咨询"
        android:textSize="@dimen/textsize_content"
        android:textColor="#00f"
        android:paddingTop="@dimen/spacing_normal"
        android:paddingBottom="@dimen/spacing_normal"
        android:paddingLeft="@dimen/spacing_normal"
        />
    <View
     android:layout_width="match_parent"
     android:layout_height="0.5dp"
     android:layout_marginLeft="4dp"
     android:layout_marginRight="4dp"
     android:background="@color/text_lightgray"
     android:visibility="visible" />
    <TextView
        android:id="@+id/tv_question5" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5.法律相关咨询"
        android:textSize="@dimen/textsize_content"
        android:textColor="#00f"
        android:paddingTop="@dimen/spacing_normal"
        android:paddingBottom="@dimen/spacing_normal"
        android:paddingLeft="@dimen/spacing_normal"
        />
    <View
     android:layout_width="match_parent"
     android:layout_height="0.5dp"
     android:layout_marginLeft="4dp"
     android:layout_marginRight="4dp"
     android:background="@color/text_lightgray"
     android:visibility="visible" />
    <TextView
        android:id="@+id/tv_question6" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6.其他问题咨询"
        android:textSize="@dimen/textsize_content"
        android:textColor="#00f"
        android:paddingTop="@dimen/spacing_normal"
        android:paddingBottom="@dimen/spacing_normal"
        android:paddingLeft="@dimen/spacing_normal"
        />
    
    

</LinearLayout>
