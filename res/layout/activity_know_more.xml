<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/base_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_larger"
        android:background="#F0EFF5" />

    <LinearLayout
        android:id="@+id/ll_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:layout_marginLeft="@dimen/spacing_min"
            android:id="@+id/tv_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/spacing_normal"
            android:text="您的称呼"
            android:textSize="@dimen/textsize_content" />

        <RelativeLayout
            android:id="@+id/rl_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_max"
            android:layout_weight="1" >

            <RelativeLayout
                android:id="@+id/rl_callItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_callItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/spacing_min"
                    android:text="先生"
                    android:textSize="@dimen/textsize_content" />

                <CheckBox
                    android:id="@+id/cb_man"                   
                    style="@style/custom_checkbox"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/spacing_max"
                    android:layout_toRightOf="@+id/tv_callItem"
                     />
            </RelativeLayout>

            <View
                android:id="@+id/v_call"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/rl_callItem"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/text_lightgray"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/rl_callItem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_call" >

                <TextView
                    android:id="@+id/tv_callItem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/spacing_min"
                    android:text="女士"
                    android:textSize="@dimen/textsize_content" />

                <CheckBox
                    android:id="@+id/cb_woman"
                    style="@style/custom_checkbox"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/spacing_max"
                    android:layout_toRightOf="@+id/tv_callItem2"
                     />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_larger"
        android:background="#F0EFF5" />

    <LinearLayout
        android:id="@+id/ll_call1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:padding="@dimen/spacing_min" >

            <TextView
                android:layout_marginLeft="@dimen/spacing_normal"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="您的姓名"
                android:textSize="@dimen/textsize_content" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_marginLeft="60dp"
                android:layout_toRightOf="@+id/tv_name"
                android:background="@drawable/name" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_min" >

            <TextView
                android:layout_marginLeft="@dimen/spacing_normal"
                android:id="@+id/tv_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="您的电话"
                android:textSize="@dimen/textsize_content" />

            <EditText
                android:id="@+id/et_name1"
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_marginLeft="60dp"
                android:layout_toRightOf="@+id/tv_name1"
                android:background="@drawable/name" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:padding="@dimen/spacing_min" >

            <TextView
                android:layout_marginLeft="@dimen/spacing_normal"
                android:id="@+id/tv_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="电子邮箱(选填)"
                android:textSize="@dimen/textsize_content" />

            <EditText
                android:id="@+id/et_name2"
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@+id/tv_name2"
                android:background="@drawable/name" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_larger"
        android:background="#F0EFF5" />

    <RelativeLayout
        android:id="@+id/rl_name3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/spacing_min" >

        <TextView
            android:layout_marginLeft="@dimen/spacing_normal"
            android:id="@+id/tv_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:text="问题描述(选填)"
            android:textSize="@dimen/textsize_content" />

        <EditText
            android:id="@+id/et_name3"
            android:layout_width="180dp"
            android:layout_height="75dp"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_toRightOf="@+id/tv_name3"
            android:background="@drawable/name" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_larger"
        android:background="#F0EFF5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0EFF5"
        android:gravity="center_horizontal"
        android:text="你的专属顾问会尽快与你联系"
        android:textSize="@dimen/textsize_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#F0EFF5"
        android:orientation="vertical" >

        <Button
            android:layout_width="300dp"
            android:layout_height="@dimen/spacing_max"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_max"
            android:background="@drawable/confirm_buy"
            android:text="确认提交"
            android:textColor="#FFCAB1"
            android:textSize="@dimen/textsize_content" />
    </LinearLayout>
    <!--  android:background="@drawable/confirm_buy" -->

</LinearLayout>