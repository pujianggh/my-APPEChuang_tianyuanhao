<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/popup_avatar_editor_cancel"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ios_like_dialog_item_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="选择"
            android:textColor="@color/text_gray"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:background="@color/line_dark" />

        <ListView
            android:id="@+id/listView_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="0.5dp"
            android:gravity="center" >
        </ListView>
    </LinearLayout>

    <TextView
        android:id="@+id/popup_avatar_editor_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ios_like_dialog_item_bg"
        android:gravity="center"
        android:text="@string/b_cancel"
        android:textColor="@color/ios_like_dialog_item_text"
        android:textSize="18sp" />

</RelativeLayout>