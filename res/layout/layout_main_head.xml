<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rly_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="200dp" >

        <fragment
            android:id="@+id/fragment_viewpager"
            android:name="com.echuang.tianyuanhao.view.pager.CycleViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_button_pressed"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:id="@+id/lly_select1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_image_show"
                android:gravity="center"
                android:text="国家"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_little" />

            <TextView
                android:id="@+id/tv_select1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="全部"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_min" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lly_select2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_image_show"
                android:gravity="center"
                android:text="租金"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_little" />

            <TextView
                android:id="@+id/tv_select2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="全部"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_min" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lly_select3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_image_show"
                android:gravity="center"
                android:text="毛回报率"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_little" />

            <TextView
                android:id="@+id/tv_select3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="全部"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_min" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <LinearLayout
            android:id="@+id/lly_price_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/spacing_min"
        android:background="@drawable/ic_home_rm_bg"
        android:gravity="center"
        android:text="热门资产"
        android:textColor="@color/pic_text_orange"
        android:textSize="@dimen/textsize_normalplus" />

</LinearLayout>