<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        layout="@layout/title_imagebutton" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/spacing_min" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/fang" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/title_bg" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/spacing_normal" >

                    <TextView
                        style="@style/custom_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="0dp"
                        android:singleLine="true"
                        android:text="2510 3rd St"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/textsize_normalplus" />

                    <TextView
                        style="@style/custom_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="0dp"
                        android:singleLine="true"
                        android:text="Houston, USA"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/textsize_normalplus" />
                </LinearLayout>

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_myhome_info" />
            </RelativeLayout>

            <TextView
                style="@style/common_text_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:layout_marginRight="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_normal"
                android:gravity="center_vertical"
                android:text="租客信息"
                android:textColor="@color/text_orange"
                android:textSize="@dimen/textsize_normalplus" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height" >

                <TextView
                    style="@style/common_text_style"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:drawablePadding="@dimen/spacing_pading_min"
                    android:gravity="center_vertical"
                    android:text="性别"
                    android:textSize="@dimen/textsize_normalplus" />

                <TextView
                    style="@style/common_text_style"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:gravity="center_vertical"
                    android:text="男"
                    android:textColor="@color/text_deepgray"
                    android:textSize="@dimen/textsize_normalplus" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height" >

                <TextView
                    style="@style/common_text_style"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:drawablePadding="@dimen/spacing_pading_min"
                    android:gravity="center_vertical"
                    android:text="姓"
                    android:textSize="@dimen/textsize_normalplus" />

                <TextView
                    style="@style/common_text_style"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:gravity="center_vertical"
                    android:text="WEHUNT"
                    android:textColor="@color/text_deepgray"
                    android:textSize="@dimen/textsize_normalplus" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height" >

                <TextView
                    style="@style/common_text_style"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:drawablePadding="@dimen/spacing_pading_min"
                    android:gravity="center_vertical"
                    android:text="名"
                    android:textSize="@dimen/textsize_normalplus" />

                <TextView
                    style="@style/common_text_style"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:gravity="center_vertical"
                    android:text="MIKE"
                    android:textColor="@color/text_deepgray"
                    android:textSize="@dimen/textsize_normalplus" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_gray" />
             <TextView
                style="@style/common_text_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:layout_marginRight="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_normal"
                android:gravity="center_vertical"
                android:text="合同信息"
                android:textColor="@color/text_orange"
                android:textSize="@dimen/textsize_normalplus" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height" >

                <TextView
                    style="@style/common_text_style"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:drawablePadding="@dimen/spacing_pading_min"
                    android:gravity="center_vertical"
                    android:text="合同截至日期"
                    android:textSize="@dimen/textsize_normalplus" />

                <TextView
                    style="@style/common_text_style"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:gravity="center_vertical"
                    android:text="2017/1/10"
                    android:textColor="@color/text_deepgray"
                    android:textSize="@dimen/textsize_normalplus" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height" >

                <TextView
                    style="@style/common_text_style"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:drawablePadding="@dimen/spacing_pading_min"
                    android:gravity="center_vertical"
                    android:text="合同起始日期"
                    android:textSize="@dimen/textsize_normalplus" />

                <TextView
                    style="@style/common_text_style"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:gravity="center_vertical"
                    android:text="2016/1/11"
                    android:textColor="@color/text_deepgray"
                    android:textSize="@dimen/textsize_normalplus" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height" >

                <TextView
                    style="@style/common_text_style"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:drawablePadding="@dimen/spacing_pading_min"
                    android:gravity="center_vertical"
                    android:text="租金"
                    android:textSize="@dimen/textsize_normalplus" />

                <TextView
                    style="@style/common_text_style"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:gravity="center_vertical"
                    android:text="￥1795"
                    android:textColor="@color/text_deepgray"
                    android:textSize="@dimen/textsize_normalplus" />
            </RelativeLayout>
            

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_gray" />
            <com.baidu.mapapi.map.MapView  
			    android:id="@+id/bmapView1"  
			    android:layout_width="fill_parent"  
			    android:layout_height="110dp" 
			    android:clickable="true" />
            <!-- <ImageView 
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:id="@+id/iv_map"
                android:src="@drawable/ditu"
                /> -->
            
            
            
            
        </LinearLayout>
    </ScrollView>
</LinearLayout>